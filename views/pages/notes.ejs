<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/header.ejs %>
    <link rel="stylesheet" href="/stylesheets/notes_list.css"/>
  </head>

  <body>

    <% include ../partials/nav2.ejs %>

    <div class="container-fluid text-center">
      <div class="row">
        <div class="col-xs-2"></div>
        <div class="col-xs-8">
          <a type="button" class="btn btn-lg btn-default inline-block" href="/new">
            <i class="fas fa-sticky-note"></i>
            <span>New note</span>
          </a>
          <ul class="inline-block" style="margin: 10px;">
            <% results.forEach(function(r) { %>
                <li style="text-align: center; list-style-type: none;">
                  <a href="notes/<%= r.n_id %>" style="text-decoration: none;"><%= r.n_title %></a>
                  <div class="pull-right">
                    <a href="notes/<%= r.n_id %>/edit"><i class="fas fa-edit"></i></a>
                    <a href="notes/<%= r.n_id %>/delete"><i class="fas fa-trash-alt"></i></a>
                  </div>
                </li>
            <% }); %>
          </ul>
        </div>
        <div class="col-xs-2"></div>
      </div>
    </div>

    <footer style="text-align: center;">
      <p>Signed in as <%= name %></p><br/>
      <% include ../partials/footer2.ejs %>
    </footer>
  </body>
</html>
